                            for (var i = 0; i < paises.Length; i++)
                            {
                                listaPaises.Add(new SelectListItem
                                {
                                    Text = paises[i],
                                    Value = paises[i]
                                });
                            }
                        }
                        @Html.DropDownListFor(m => m.pais, listaPaises, "-- Seleccionar País --")
                        @Html.ValidationMessageFor(m => m.pais)
                    </div>
                    <div class="col-md-2">
                        @Html.LabelFor(m => m.telefono, "Teléfono:", new { placeholder = "telefono cli" })
                    </div>
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.telefono)
                        @Html.ValidationMessageFor(m => m.telefono)
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        @Html.LabelFor(m => m.dni, "DNI:")
                    </div>
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.dni)
                        @Html.ValidationMessageFor(m => m.dni)
                    </div>
                    <div class="col-md-2">
                        @Html.LabelFor(m => m.cuit, "CUIT:", new { @id = "campoCUIT", placeholder = "cuit cli" })
                    </div>
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.cuit)
                        @Html.ValidationMessageFor(m => m.cuit)
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        @Html.LabelFor(m => m.razonsocial, "Razón Social:", new { @id = "campoRS", placeholder = "cuit cli" })
                    </div>
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.razonsocial)
                        @Html.ValidationMessageFor(m => m.razonsocial)
                    </div>
                </div>

                <input type="submit" value="GRABAR" class="btn btn-default" />
                @ViewBag.Respuesta
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver", "Index")
</div>
<div>
    @Html.ActionLink("Ver Lista", "ListarCli")
</div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>
    $('#cuit').prop('disabled', true);
    $('#razonsocial').prop('disabled', true);
    
    $('#dropdownCliente').change(function (e) {
        let valorCliente = $('#dropdownCliente').val();
        if (valorCliente == 0) {
            $('#cuit').prop('disabled', true);
            $('#razonsocial').prop('disabled', true);
        } else {
            $('#cuit').prop('disabled', false);
            $('#razonsocial').prop('disabled', false);
        }
    });

</script>

