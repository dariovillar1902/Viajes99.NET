@model MVCFrameworkNeoris.Models.Cliente

@{
    ViewBag.Title = "Alta de Clientes";
}

<h2>Nuevo cliente</h2>

@using (Html.BeginForm("AltaCli", "Home", FormMethod.Post))
{

    <div class="form-horizontal">
        <h4>Ingrese los datos del cliente</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                <div class="row">
                    <div class="col-md-2">
                        @{
                            List<SelectListItem> listaTipoCli = new List<SelectListItem>();
                            string[] tiposCli = { "Particular", "Corporativo" };
                            for (var i = 0; i < tiposCli.Length; i++)
                            {
                                listaTipoCli.Add(new SelectListItem
                                {
                                    Text = tiposCli[i],
                                    Value = i.ToString()
                                });
                            }
                        }
                        
                        @Html.LabelFor(m => m.tipocliente, "Tipo de Cliente:", new { placeholder = "tipocliente cli" })
                    </div>
                    <div class="col-md-4">
                        @Html.DropDownListFor(m => m.tipocliente, listaTipoCli, new { @id = "dropdownCliente", placeholder = "--Seleccionar Cliente--" })
                        @Html.ValidationMessageFor(m => m.tipocliente)
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        @Html.LabelFor(m => m.nombre, "Nombre:")
                    </div>
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.nombre)
                        @Html.ValidationMessageFor(m => m.nombre)
                    </div>
                    <div class="col-md-2">
                        @Html.LabelFor(m => m.apellido, "Apellido:", new { placeholder = "apellido cli" })
                    </div>
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.apellido)
                        @Html.ValidationMessageFor(m => m.apellido)
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        @Html.LabelFor(m => m.direccion, "Dirección:")
                    </div>
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.direccion)
                        @Html.ValidationMessageFor(m => m.direccion)
                    </div>
                    <div class="col-md-2">
                        @{
                            List<SelectListItem> listaProvincias = new List<SelectListItem>();
                            string[] provs = { "Buenos Aires", "Capital Federal", "Catamarca", "Chaco", "Chubut", "Córdoba", "Corrientes", "Entre Ríos", "Formosa", "Jujuy", "La Pampa", "La Rioja", "Mendoza", "Misiones", "Neuquén", "Río Negro", "Salta", "San Luis", "Santa Cruz", "Santa Fe", "Santiago del Estero", "Tierra del Fuego", "Tucumán" };
                            for (var i = 0; i < provs.Length; i++)
                            {
                                listaProvincias.Add(new SelectListItem
                                {
                                    Text = provs[i],
                                    Value = provs[i]
                                });
                            }
                        }
                        @Html.LabelFor(m => m.provincia, "Provincia:")
                    </div>
                    <div class="col-md-4">
                        @Html.DropDownListFor(m => m.provincia, listaProvincias, "-- Seleccionar Provincia --")
                        @Html.ValidationMessageFor(m => m.provincia)
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        @Html.LabelFor(m => m.pais, "País:", new { placeholder = "pais cli" })
                    </div>
                    <div class="col-md-4">
                        @{
                            List<SelectListItem> listaPaises = new List<SelectListItem>();
