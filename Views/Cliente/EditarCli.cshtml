                        {
                            listaProvincias.Add(new SelectListItem
                            {
                                Text = provs[i],
                                Value = provs[i]
                            });
                        }
                    }
                    @Html.LabelFor(m => m.provincia, "Provincia:")
                    @Html.DropDownListFor(m => m.provincia, listaProvincias, "-- Seleccionar Provincia --", new { @class = "select", @Value = ViewBag.arrayCliente[4] })

                </p>


                <p class="textoLabels">
                    <label>
                        @Html.LabelFor(m => m.direccion, "Dirección:")

                    </label>
                    @Html.TextBoxFor(m => m.direccion, new { @class = "textBox", @Value = ViewBag.arrayCliente[2] })
                    @Html.ValidationMessageFor(m => m.direccion)

                </p>




                <p class="textoLabels">
                    <label> @Html.LabelFor(m => m.dni, "DNI:")</label>

                    @Html.TextBoxFor(m => m.dni, new { @class = "textBox", @Value = ViewBag.arrayCliente[6] })
                    @Html.ValidationMessageFor(m => m.dni)

                </p>

                <p class="textoLabels">
                    <label>@Html.LabelFor(m => m.cuit, "CUIT:", new { @id = "campoCUIT", placeholder = "cuit cli" })</label>

                    @Html.TextBoxFor(m => m.cuit, new { @class = "textBox", @Value = ViewBag.arrayCliente[7] })
                    @Html.ValidationMessageFor(m => m.cuit)


                </p>

                <p class="textoLabels">
                    <label>  @Html.LabelFor(m => m.razonsocial, "Razón Social:", new { @id = "campoRS", placeholder = "cuit cli" })</label>

                    @Html.TextBoxFor(m => m.razonsocial, new { @class = "textBox", @Value = ViewBag.arrayCliente[8] })
                    @Html.ValidationMessageFor(m => m.razonsocial)
                </p>

                <p class="boton">
                    <button type="submit" class="btn btn-default"> Guardar </button>
                    @*<input type="submit" value="Guardar" class="btn btn-default" />*@
                    @ViewBag.Respuesta

                </p>
            </div>

        </div>

    </div>
</div>
}

<div>
    @Html.ActionLink("Volver", "Index")
</div>
<div>
    @Html.ActionLink("Ver Lista", "ListarCli")
</div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>
    $('#cuit').prop('disabled', true);
    $('#razonsocial').prop('disabled', true);
    
    $('#dropdownCliente').change(function (e) {
        let valorCliente = $('#dropdownCliente').val();
        if (valorCliente == 0) {
            $('#cuit').prop('disabled', true);
            $('#razonsocial').prop('disabled', true);
        } else {
            $('#cuit').prop('disabled', false);
            $('#razonsocial').prop('disabled', false);
        }
    });

</script>

